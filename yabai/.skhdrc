shift + ctrl + cmd - v: open /Applications/Visual\ Studio\ Code.app
shift + ctrl + cmd - s: open /Applications/Slack.app
shift + ctrl + cmd - l: open /Applications/LINE.app
shift + ctrl + cmd - t: open /Applications/TickTick.app
shift + ctrl + cmd - o: open /Applications/Obsidian.app
shift + ctrl + cmd - d: open /Applications/DeepL.app
shift + ctrl + cmd - k: open /Applications/Skype.app
shift + ctrl + cmd - f: open ~/
